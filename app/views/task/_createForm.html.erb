<% form_for :task,@task,
  :url => {:action => "create",
  :controller => "task"},
  :html => {:id => 'createForm' } do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description,:cols => 50, :rows => 6 %>
  </p>
  <p>
    <span id="btnSubmit">
      <%= f.submit "save" %>
      <input type="reset" id="btnReset"/>
    </span>
  </p>
  <span class="ajax_img" style="display: none"><%=image_tag "ajax-loader.gif"%></span>
<% end %>
